<Window x:Class="WpfWithWebApi.Wpf.Views.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WpfWithWebApi.Wpf.Views"
		xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
		xmlns:viewmodels="clr-namespace:WpfWithWebApi.Wpf.ViewModels"
		d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
		mc:Ignorable="d"
		Title="MainWindow" Height="450" Width="800">
	<StackPanel Orientation="Vertical">
		<ListBox ItemsSource="{Binding People}" SelectedItem="{Binding SelectedPerson}" />
		<TextBox Width="120" Height="32" Text="{Binding SelectedPerson.Name}" />
		<Button Command="{Binding GetCommand}" Content="Refresh" Width="120" Height="32" />
	</StackPanel>
</Window>