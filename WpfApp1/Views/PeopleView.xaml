            <DataGridCheckBoxColumn Header="Selected" Binding="{Binding Path=IsStupid}" />
            <DataGridComboBoxColumn Header="Options" ItemsSource="{Binding}" SelectedItemBinding="{Binding Path=Lastname}" />
        </DataGrid.Columns>-->
    </DataGrid>
</UserControl>